<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.n52.wps</groupId>
		<artifactId>aviation-4-wps</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>52n-wps-4-aviation</artifactId>
	<packaging>war</packaging>
	<inceptionYear>2012</inceptionYear>
	<description>Creates a deployable WAR with aviation processes.</description>
	<name>52n-wps-4-aviation</name>

	<properties>
		<final.war.name>${project.name}-${project.version}</final.war.name>
	</properties>

	<repositories>
		<repository>
			<id>n52-releases</id>
			<name>52n Releases</name>
			<url>http://52north.org/maven/repo/releases</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>osgeo</id>
			<name>Open Source Geospatial Foundation Repository</name>
			<url>http://repo.opengeo.org/</url>
		</repository>
	</repositories>

	<build>
		<finalName>${final.war.name}</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<overlays>
						<overlay>
							<groupId>org.n52.wps</groupId>
							<artifactId>52n-wps-webapp</artifactId>
							<excludes>
								<exclude>WEB-INF/lib/gt-*2.*.jar</exclude>
								<exclude>WEB-INF/lib/net.opengis*2.7*.jar</exclude>
								<exclude>WEB-INF/lib/org.w3.xlink-2.7*.jar</exclude>
								<exclude>WEB-INF/lib/httpcore-4.0.jar</exclude>
								<exclude>WEB-INF/lib/*httpclient*.jar</exclude>
								<exclude>WEB-INF/lib/imageio*1.0*.jar</exclude>
								<exclude>requests</exclude>
							</excludes>
						</overlay>
					</overlays>
					<webResources>
						<resource>
							<directory>${basedir}/src/main/webapp/config</directory>
							<filtering>true</filtering>
							<targetPath>config</targetPath>
							<includes>
								<include>**/*.xml</include>
							</includes>
						</resource>
					</webResources>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
